# Use flags
USE="<%= gentoo_global_use %>"

# Gentoo Features
FEATURES="<%= gentoo_features %>"

# Mirrors
GENTOO_MIRRORS="<%= gentoo_mirrors %>"
SYNC="<%= gentoo_sync %>"

# Portage overlays
PORTDIR_OVERLAY="<%= gentoo_portdir_overlay %>"

# Licenses we accept outside of the norm
ACCEPT_LICENSE="<%= gentoo_accept_license %>"

<% if gentoo_binhost != nil -%>
# Binhost
PORTAGE_BINHOST="<%= gentoo_binhost %>"
<% end -%>

<% if gentoo_emerge_opts != nil -%>
EMERGE_DEFAULT_OPTS="<%= gentoo_emerge_opts %>"
<% end -%>

CHOST="<%= hardwaremodel %>-pc-linux-gnu"
CFLAGS="-O2 -pipe"
CXXFLAGS="${CFLAGS}"

MAKEOPTS="-j<%= processorcount %>"

# extra settings

