# Use flags
USE="<%= global_use %>"

# Gentoo Features
FEATURES="<%= features %>"

# Mirrors
GENTOO_MIRRORS="<%= mirrors %>"
SYNC="<%= sync %>"

# Portage overlays
PORTDIR_OVERLAY="<%= portdir_overlay %>"

# Licenses we accept outside of the norm
ACCEPT_LICENSE="<%= accept_license %>"

<% if binhost != nil -%>
# Binhost
PORTAGE_BINHOST="<%= binhost %>"
<% end -%>

<% if emerge_opts != nil -%>
EMERGE_DEFAULT_OPTS="<%= emerge_opts %>"
<% end -%>

CHOST="<%= hardwaremodel %>-pc-linux-gnu"
CFLAGS="-O2 -pipe"
CXXFLAGS="${CFLAGS}"

MAKEOPTS="-j<%= processorcount %>"

# extra settings

